@model Project.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h3 class="text-danger mb-4"><i class="fas fa-edit"></i> Edit Movie</h3>

    <form asp-action="EditMovie" method="post">

        <div class="mb-3">
            <label asp-for="MovieId" class="form-label text-light"></label>
            <input type="number" asp-for="MovieId" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label text-light"></label>
            <input asp-for="Title" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="Genre" class="form-label text-light"></label>
            <input asp-for="Genre" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label text-light"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="PosterUrl" class="form-label text-light"></label>
            <input asp-for="PosterUrl" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="TicketsAvailable" class="form-label text-light"></label>
            <input asp-for="TicketsAvailable" type="number" class="form-control bg-dark text-light" required />
        </div>

        <button type="submit" class="btn btn-warning">
            <i class="fas fa-save"></i> Edit Movie
        </button>
        <a href="/Admin/AllMovies" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
